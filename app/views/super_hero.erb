<form method="post" action="/teams">
    <h2>Create a Team and Heroes!</h2>
    <div>
        <label for="team_name">Team Name:</label>
        <input id="team_name" type="text" name="team[name]" />
    </div>
    <div>
        <label for="team_motto">Team Motto:</label>
        <input id="team_motto" type="text" name="team[motto]" />
    </div>

    <h2>Hero 1</h2>
    <div>
        <label for="member1_name">Hero Name:</label>
        <input id="member1_name" type="text" name="team[member][][name]" />
    </div>
    <div>
        <label for="member1_power">Hero Power:</label>
        <input id="member1_power" type="text" name="team[member][][power]" />
    </div>
    <div>
        <label for="member1_bio">Hero Biography:</label><br>
        <input id="member1_bio" type="text" name="team[member][][bio]" />
    </div>

    <h2>Hero 2</h2>
    <div>
        <label for="member2_name">Hero Name:</label>
        <input id="member2_name" type="text" name="team[member][][name]" />
    </div>
    <div>
        <label for="member2_power">Hero Power:</label>
        <input id="member2_power" type="text" name="team[member][][power]" />
    </div>
    <div>
        <label for="member2_bio">Hero Biography:</label>
        <input id="member2_bio" type="text" name="team[member][][bio]" />
    </div>

    <h2>Hero 3</h2>
    <div>
        <label for="member3_name">Hero Name:</label>
        <input id="member3_name" type="text" name="team[member][][name]" />
    </div>
    <div>
        <label for="member3_power">Hero Power:</label>
        <input id="member3_power" type="text" name="team[member][][power]" />
    </div>
    <div>
        <label for="member3_bio">Hero Biography:</label>
        <input id="member3_bio" type="text" name="team[member][][bio]" />
    </div>

    <div>
        <input id="submit" type="submit" value="Submit"/>
    </div>
</form>